<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xinzhe.voipapp.activity.certificate.CertificateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textViewCerName"
                android:textSize="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/textViewCerBalan"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="证书下载"
            android:id="@+id/certiDownBtn"
            android:layout_alignTop="@+id/certiCancelBtn"
            android:layout_alignLeft="@+id/certiRefreshBtn"
            android:layout_alignStart="@+id/certiRefreshBtn"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="证书吊销"
            android:id="@+id/certiCancelBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="127dp"
            android:textSize="25dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="证书更新"
            android:id="@+id/certiRefreshBtn"
            android:layout_alignTop="@+id/aplybtm"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="证书申请"
            android:id="@+id/aplybtm"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="92dp"
            android:textSize="25dp" />

    </RelativeLayout>
</RelativeLayout>
